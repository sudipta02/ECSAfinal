<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainContent3"
    >

</FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainContent"
        >

        <LinearLayout
            android:id="@+id/mainContent2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity"
            android:background="@drawable/slide1"
            >


            <Button
                android:id="@+id/faculty_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/round_edge_button"
                android:text="Faculty List"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:clickable="false"
                />

            <Button
                android:id="@+id/student_council"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/round_edge_button"
                android:text="Student Council"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:clickable="false"
                />

            <Button
                android:id="@+id/subject_notes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/round_edge_button"
                android:text="Subject Notes"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:clickable="false"
                />

            <Button
                android:id="@+id/department_website"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:autoLink="web"
                android:background="@drawable/round_edge_button"
                android:linksClickable="true"
                android:onClick="about_dept"
                android:text="Department Website"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:clickable="false"
                />

        </LinearLayout>
    </FrameLayout>


    <ListView
        android:id="@+id/drawerList"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@drawable/slide4"
        android:divider="#9E9E9E"
        android:dividerHeight="0.5dp"
       />

</android.support.v4.widget.DrawerLayout>

