<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/slide4"
    android:clickable="true"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Developed By"
        android:textSize="28sp"
        android:gravity="center"
        android:id="@+id/developedBy"
        android:layout_below="@+id/ecsav2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="44dp"
        android:id="@+id/rijumLayout"
        android:background="@drawable/background_credits"
        android:layout_below="@+id/developedBy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/bimalesh"
            android:id="@+id/rijum"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/rijum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/rijum"
            android:id="@+id/bimaleshSahoo"
            android:text="Bimalesh Sahoo"/>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@+id/bimaleshSahoo"
            android:layout_toRightOf="@+id/rijum"
            android:layout_toEndOf="@+id/rijum"
            android:textColor="#303030"
            android:id="@+id/appDeveloper1"
            android:text="App Developer"/>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@+id/appDeveloper1"
            android:layout_toRightOf="@+id/rijum"
            android:layout_toEndOf="@+id/rijum"
            android:textColor="#303030"
            android:id="@+id/wiproInfotech"
            android:text="Wipro Technologies"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/happyLayout"
        android:background="@drawable/background_credits"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/rijumLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sudipta"
            android:id="@+id/happy"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/happy"
            android:layout_toStartOf="@+id/happy"
            android:id="@+id/sudiptaSundarSahoo"
            android:text="Sudipta Sundar Sahoo"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@+id/sudiptaSundarSahoo"
            android:layout_toLeftOf="@+id/happy"
            android:layout_toStartOf="@+id/happy"
            android:textColor="#303030"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/appDeveloper2"
            android:text="App Developer"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/happy"
            android:layout_toStartOf="@+id/happy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/appDeveloper2"
            android:textColor="#303030"
            android:id="@+id/nitr"
            android:text="Nit-Rourkela"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ECSA V2.0"
        android:paddingTop="16dp"
        android:textSize="20sp"
        android:id="@+id/ecsav2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>